  on_listening:
    - delay: 100ms
    - light.turn_on:
        id: led
        blue: 60%
        red: 0%
        green: 0%
        effect: "Slow Pulse"

  on_stt_vad_end:
    - delay: 100ms
    - light.turn_on:
        id: led
        blue: 60%
        red: 0%
        green: 0%
        effect: "Fast Pulse"

  on_tts_end: 
    - delay: 200ms
    - light.turn_on:
        id: led
        blue: 0%
        red: 0%
        green: 100%
        brightness: 60%
        effect: none
    - delay: 200ms
    - homeassistant.service:
        service: media_player.play_media
        data_template:
          entity_id: ${external_media_player}
          media_content_id: !lambda return x;
          media_content_type: "music"
          extra: '{"metadata": {"metadataType": 3, "title": " ", "images": [{"url": "${speech_url}" }]}}'
