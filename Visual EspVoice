esphome:
  name: ${name}
  friendly_name: ${friendly_name}
  on_boot:
     - priority: -100
       then:
         - light.turn_on:
             id: led
             effect: "Slow Pulse"
             red: 100%
             green: 60%
             blue: 0%
         - wait_until:
             condition:
               wifi.connected:
         - light.turn_on:
             id: led
             effect: "Fast Pulse"
             red: 0%
             green: 100%
             blue: 0%
         - wait_until:
             condition:
               api.connected:
         - light.turn_on:
             id: led
             effect: none
             red: 0%
             green: 100%
             blue: 0%
         - delay: 1s
         - script.execute: reset_led
         - wait_until: api.connected
         - delay: 1s
         - if:
             condition:
               switch.is_on: use_wake_word
             then:
               - voice_assistant.start_continuous:

